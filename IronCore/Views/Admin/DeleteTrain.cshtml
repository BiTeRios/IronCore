@model IronCore.Models.CoachViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Удалить тренера";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">@ViewBag.Title</h1>

    <div class="alert alert-warning">
        Вы действительно хотите удалить тренера
        <strong>@Model.FullName</strong>?
    </div>

    @using (Html.BeginForm("DeleteConfirmed", "Admin",
                           new { id = Model.ID },
                           FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt me-1"></i> Удалить
        </button>
        @Html.ActionLink("Отмена", "Trainers", "Admin",
                         routeValues: null,
                         htmlAttributes: new { @class = "btn btn-secondary ms-2" })
    }
</div>
