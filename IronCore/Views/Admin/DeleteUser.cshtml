@model IronCore.Models.EditUserViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Удалить пользователя";
}

<h2>Удалить пользователя</h2>
<div class="alert alert-danger">Вы уверены, что хотите удалить пользователя <b>@Model.UserName</b>?</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a href="@Url.Action("Users")" class="btn btn-secondary">Отмена</a>
}