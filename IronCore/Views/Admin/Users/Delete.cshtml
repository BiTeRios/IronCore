@model IronCore.Domain.Entities.User.UserDbModel
@{
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Удаление пользователя";
}

<h2 class="mb-3">Удаление пользователя</h2>

<div class="alert alert-warning">
    Вы уверены, что хотите удалить пользователя <strong>@Model.UserName</strong>?
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Удалить</button>
    @Html.ActionLink("Отмена", "Index", null, new { @class = "btn btn-secondary ms-2" })
}
