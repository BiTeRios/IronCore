@model IronCore.Models.ProgramViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Программа";
}
<h2>@(Model.Id == 0 ? "Добавить программу" : "Редактировать программу")</h2>
@using (Html.BeginForm("EditCreateProgram", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    </div>
    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
    </div>
    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Duration)
        @Html.TextBoxFor(m => m.Duration, new { @class = "form-control" })
    </div>
    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Trainer)
        @Html.TextBoxFor(m => m.Trainer, new { @class = "form-control" })
    </div>
    <div class="form-group mb-3">
        @Html.LabelFor(m => m.SuitableFor)
        @Html.TextBoxFor(m => m.SuitableFor, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-success">Сохранить</button>
    <a href="@Url.Action("ProgramsList")" class="btn btn-secondary">Назад</a>
}
