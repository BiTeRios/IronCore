@model IronCore.Models.OrderViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Удалить заказ";
}
<div id="content">
    <h2>Удалить заказ #@Model.Id</h2>
    <div class="alert alert-danger">Вы уверены, что хотите удалить этот заказ?</div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a href="@Url.Action("Orders")" class="btn btn-secondary">Отмена</a>
    }
</div>
