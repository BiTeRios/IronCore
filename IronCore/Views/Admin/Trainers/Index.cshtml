@model IEnumerable<IronCore.Domain.Entities.Coach.CoachCl>
@{
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Тренеры";
}

<h2 class="mb-3">Тренеры</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>
}

<p>
    @Html.ActionLink("Добавить тренера", "Create", null,
                     new { @class = "btn btn-success" })
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Фото</th>
            <th>ФИО</th>
            <th>Специализация</th>
            <th class="text-end"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.ID</td>
                <td style="width:90px">
                    <img src="@Url.Content(t.ImagePath ?? "~/Images/no-avatar.png")"
                         class="img-thumbnail" style="height:80px" />
                </td>
                <td>@t.FullName</td>
                <td>@t.Specialization</td>
                <td class="text-end">
                    @Html.ActionLink("Ред.", "Edit", new { id = t.ID },
                                     new { @class = "btn btn-sm btn-primary" }) |
                    @Html.ActionLink("Удал.", "Delete", new { id = t.ID },
                                     new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
