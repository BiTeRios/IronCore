@model IronCore.Domain.Entities.Coach.CoachCl
@{
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
    ViewBag.Title = Model.ID == 0 ? "Добавить тренера" : "Редактировать тренера";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(null, null, FormMethod.Post,
                       new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="mb-3">
        @Html.LabelFor(m => m.FullName)
        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Specialization)
        @Html.TextBoxFor(m => m.Specialization, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.ExperienceTime, "Стаж (лет)")
        @Html.TextBoxFor(m => m.ExperienceTime,
                         new { @class = "form-control", type = "number", min = "0" })
    </div>

    <div class="mb-3">
        @Html.Label("Фото")
        <input type="file" name="photo" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="@Url.Content(Model.ImagePath)"
                 class="img-thumbnail mt-2" style="height:120px" />
        }
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Bio, "Описание")
        @Html.TextAreaFor(m => m.Bio, 6, 60, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-success">Сохранить</button>
    @Html.ActionLink("Отмена", "Index", null,
                     new { @class = "btn btn-secondary ms-2" })
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
