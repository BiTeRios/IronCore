@model IronCore.Models.ProgramViewModel
@{
    ViewBag.Title = "Edit Program";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="layout_padding">
    <div class="container">
        <h2 class="mb-4">Edit Program</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)

            <div class="mb-3">
                @Html.LabelFor(m => m.Title)
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Title)
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Description)
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Description)
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Duration)
                @Html.TextBoxFor(m => m.Duration, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Trainer)
                @Html.TextBoxFor(m => m.Trainer, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.SuitableFor)
                @Html.TextBoxFor(m => m.SuitableFor, new { @class = "form-control" })
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a href="@Url.Action("ProgramsList")" class="btn btn-secondary">Cancel</a>
        }
    </div>
</section>