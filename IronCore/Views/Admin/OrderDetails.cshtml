@model IronCore.Models.OrderViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Детали заказа";
}
<div id="content">
    <h2>Заказ #@Model.Id</h2>
    <dl class="row">
        <dt class="col-sm-2">Дата создания</dt>
        <dd class="col-sm-10">@Model.Created.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">Сумма</dt>
        <dd class="col-sm-10">@Model.Total руб.</dd>
        <dt class="col-sm-2">Статус</dt>
        <dd class="col-sm-10">@Model.State</dd>
        <dt class="col-sm-2">Товары</dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var p in Model.Products)
                {
                    <li>@p.Title - @p.Price лей. x @p.Quantity</li>
                }
            </ul>
        </dd>
    </dl>
    <a href="@Url.Action("Orders")" class="btn btn-secondary">Назад</a>
</div>
