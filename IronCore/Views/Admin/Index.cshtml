@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Админка";
}

<!-- Main Content -->
<div id="content">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-gray-800">Панель администратора</h1>
    </div>

    <!-- Statistic Cards -->
    <div class="row g-4 mb-4">
        <div class="col-sm-6 col-xl-3">
            <div class="card shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <i class="fas fa-users card-icon text-primary"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-0">Пользователи</h5>
                        <p class="card-text display-6">1 234</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="card shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <i class="fas fa-box card-icon text-success"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-0">Товары</h5>
                        <p class="card-text display-6">567</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="card shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <i class="fas fa-file-invoice card-icon text-warning"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-0">Заказы</h5>
                        <p class="card-text display-6">89</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="card shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <i class="fas fa-chart-line card-icon text-danger"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-0">Доход</h5>
                        <p class="card-text display-6">₽123K</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Orders Table -->
    <div class="card shadow-sm mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 fw-bold text-primary">Последние заказы</h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Покупатель</th>
                            <th>Дата</th>
                            <th>Сумма</th>
                            <th>Статус</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1023</td>
                            <td>Иван Иванов</td>
                            <td>2025-05-20</td>
                            <td>₽4 500</td>
                            <td><span class="badge bg-success">Завершён</span></td>
                            <td><a href="#" class="btn btn-sm btn-outline-secondary">Просмотр</a></td>
                        </tr>
                        <tr>
                            <td>1022</td>
                            <td>Мария Петрова</td>
                            <td>2025-05-19</td>
                            <td>₽2 300</td>
                            <td><span class="badge bg-warning text-dark">В работе</span></td>
                            <td><a href="#" class="btn btn-sm btn-outline-secondary">Просмотр</a></td>
                        </tr>
                        <!-- добавьте другие строки по необходимости -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>