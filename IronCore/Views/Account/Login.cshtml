
@model IronCore.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="login_section layout_padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="form_container">
                    <div class="heading_container text-center">
                        <h2>Welcome Back!</h2>
                        <p>
                            Log in to your IronCore account to access your membership, book classes, and more...
                        </p>
                    </div>

                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Credential, new
                            {
                                @class = "form-control",
                                type = "email",
                                placeholder = "Email Address",
                                required = "required"
                            })
                        </div>

                        <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new
                            {
                                @class = "form-control",
                                placeholder = "Password",
                                required = "required"
                            })
                        </div>

                        <div class="form-group form-check">
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input", id = "rememberCheck" })
                            <label class="form-check-label" for="rememberCheck">Remember me</label>
                            <a href="@Url.Action("ForgotPass", "Account")" class="float-right">Forgot Password?</a>
                        </div>

                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-block">LOGIN</button>
                        </div>
                    }

                    <div class="text-center mt-4">
                        <p>
                            Don't have an account?
                            <a href="@Url.Action("Registration", "Account")" class="font-weight-bold">Register here</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>