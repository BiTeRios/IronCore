@model IronCore.Models.UserProfileViewModel
@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="layout_padding">
    <div class="container">
        <div class="heading_container mb-4">
            <h2 class="fw-bold">Личный кабинет</h2>
        </div>

        @if (TempData["ProfileUpdated"] != null)
        {
            <div class="alert alert-success">@TempData["ProfileUpdated"]</div>
        }

        <div class="row g-4">
            <!-- Левая колонка -->
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <h4 class="fw-semibold">@Model.UserName</h4>
                        <p class="text-muted">Участник с @Model.RegistrationDate.ToString("MMMM yyyy")</p>
                        <hr />
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("EditProfile", "Account")" class="btn btn-primary">Изменить профиль</a>
                            <a href="@Url.Action("ChangePass", "Account")" class="btn btn-warning">Сменить пароль</a>
                            <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-danger">Выйти</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Правая колонка -->
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Информация</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush mb-4">
                            <li class="list-group-item"><strong>Имя:</strong> @Model.FirstName @Model.LastName</li>
                            <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
                            <li class="list-group-item"><strong>Телефон:</strong> @Model.PhoneNumber</li>
                        </ul>

                        <div class="row">
                            <div class="col-sm-6 mb-3">
                                <div class="bg-light p-4 rounded text-center shadow-sm">
                                    <h2 class="fw-bold mb-0">@Model.OrdersCount</h2>
                                    <div class="text-muted">Заказов</div>
                                </div>
                            </div>
                        </div>

                        <hr />
                        <div>
                            <a href="@Url.Action("Orders", "Account")" class="btn btn-outline-primary">Мои заказы</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
