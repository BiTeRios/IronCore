
@{
    ViewBag.Title = "ShoppingCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Shopping Cart
            </h2>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Your Items (3)</h5>
                        <button class="btn btn-sm btn-outline-danger">Clear Cart</button>
                    </div>
                    <div class="card-body p-0">

                        <div class="cart-item p-3 border-bottom">
                            <div class="row align-items-center">
                                <div class="col-md-2 col-4">
                                    <img src="@Url.Content("~/Images/u-3.png")" alt="Program" class="img-fluid rounded" style="background-color: #f1f1f1; padding: 10px;">
                                </div>
                                <div class="col-md-5 col-8">
                                    <h6 class="mb-1">Advanced Strength Training Program</h6>
                                    <p class="text-muted mb-0">6-week program</p>
                                    <p class="text-muted mb-0">Trainer: Liogchii Vitalii</p>
                                </div>
                                <div class="col-md-2 col-4 mt-3 mt-md-0">
                                    <div class="input-group input-group-sm">
                                        <div class="input-group-prepend">
                                            <button class="btn btn-outline-secondary" type="button">-</button>
                                        </div>
                                        <input type="text" class="form-control text-center" value="1">
                                        <div class="input-group-append">
                                            <button class="btn btn-outline-secondary" type="button">+</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 col-4 mt-3 mt-md-0 text-right">
                                    <p class="mb-0 font-weight-bold">$129.99</p>
                                </div>
                                <div class="col-md-1 col-4 mt-3 mt-md-0 text-right">
                                    <button class="btn btn-sm btn-link text-danger">
                                        <span>&times;</span>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="cart-item p-3 border-bottom">
                            <div class="row align-items-center">
                                <div class="col-md-2 col-4">
                                    <img src="@Url.Content("~/Images/u-4.png")" alt="Nutrition" class="img-fluid rounded" style="background-color: #f1f1f1; padding: 10px;">
                                </div>
                                <div class="col-md-5 col-8">
                                    <h6 class="mb-1">Personalized Nutrition Plan</h6>
                                    <p class="text-muted mb-0">3-month subscription</p>
                                    <p class="text-muted mb-0">By: Nutrition Team</p>
                                </div>
                                <div class="col-md-2 col-4 mt-3 mt-md-0">
                                    <div class="input-group input-group-sm">
                                        <div class="input-group-prepend">
                                            <button class="btn btn-outline-secondary" type="button">-</button>
                                        </div>
                                        <input type="text" class="form-control text-center" value="1">
                                        <div class="input-group-append">
                                            <button class="btn btn-outline-secondary" type="button">+</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 col-4 mt-3 mt-md-0 text-right">
                                    <p class="mb-0 font-weight-bold">$89.99</p>
                                </div>
                                <div class="col-md-1 col-4 mt-3 mt-md-0 text-right">
                                    <button class="btn btn-sm btn-link text-danger">
                                        <span>&times;</span>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="cart-item p-3">
                            <div class="row align-items-center">
                                <div class="col-md-2 col-4">
                                    <img src="@Url.Content("~/Images/u-1.png")" alt="Equipment" class="img-fluid rounded" style="background-color: #f1f1f1; padding: 10px;">
                                </div>
                                <div class="col-md-5 col-8">
                                    <h6 class="mb-1">Premium Resistance Bands Set</h6>
                                    <p class="text-muted mb-0">5 bands with different resistance</p>
                                    <p class="text-muted mb-0">Brand: IronCore</p>
                                </div>
                                <div class="col-md-2 col-4 mt-3 mt-md-0">
                                    <div class="input-group input-group-sm">
                                        <div class="input-group-prepend">
                                            <button class="btn btn-outline-secondary" type="button">-</button>
                                        </div>
                                        <input type="text" class="form-control text-center" value="1">
                                        <div class="input-group-append">
                                            <button class="btn btn-outline-secondary" type="button">+</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 col-4 mt-3 mt-md-0 text-right">
                                    <p class="mb-0 font-weight-bold">$34.99</p>
                                </div>
                                <div class="col-md-1 col-4 mt-3 mt-md-0 text-right">
                                    <button class="btn btn-sm btn-link text-danger">
                                        <span>&times;</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4 mb-lg-0">
                    <div class="card-header">
                        <h5 class="mb-0">You Might Also Like</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 col-6 mb-3 mb-md-0">
                                <div class="card h-100">
                                    <img src="@Url.Content("~/Images/u-2.png")" alt="Diet Plan" class="card-img-top p-3" style="background-color: #f1f1f1;">
                                    <div class="card-body p-3">
                                        <h6 class="card-title mb-1">Custom Diet Plan</h6>
                                        <p class="text-muted mb-0">3-month subscription</p>
                                        <p class="text-muted mb-0">By: Nutrition Team</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-6 mb-3 mb-md-0">
                                <div class="card h-100">
                                    <img src="@Url.Content("~/Images/u-3.png")" alt="Strength Training" class="card-img-top p-3" style="background-color: #f1f1f1;">
                                    <div class="card-body p-3">
                                        <h6 class="card-title mb-1">Strength Training Program</h6>
                                        <p class="text-muted mb-0">6-week program</p>
                                        <p class="text-muted mb-0">Trainer: Liogchii Vitalii</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-6 mb-3 mb-md-0">
                                <div class="card h-100">
                                    <img src="@Url.Content("~/Images/u-1.png")" alt="Resistance Bands" class="card-img-top p-3" style="background-color: #f1f1f1;">
                                    <div class="card-body p-3">
                                        <h6 class="card-title mb-1">Premium Resistance Bands Set</h6>
                                        <p class="text-muted mb-0">5 bands with different resistance</p>
                                        <p class="text-muted mb-0">Brand: IronCore</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Order Summary</h5>
                        <p class="card-text">Your total order amount is shown below.</p>
                        <div class="d-flex justify-content-between">
                            <p class="mb-0">Subtotal</p>
                            <p class="mb-0">$254.97</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="mb-0">Shipping</p>
                            <p class="mb-0">$10.00</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="mb-0">Total</p>
                            <p class="mb-0">$264.97</p>
                        </div>
                        <button class="btn btn-primary btn-block mt-3">Proceed to Checkout</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>