
@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                My Account
            </h2>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <img src="images/user-profile.png" alt="Profile Picture" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                        <h4>John Doe</h4>
                        <p class="text-muted">Member since January 2025</p>
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-primary mr-2">Edit Profile</button>
                            <button class="btn btn-outline-danger">Logout</button>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Account Navigation</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item active">Dashboard</li>
                        <li class="list-group-item">My Programs</li>
                        <li class="list-group-item">My Trainers</li>
                        <li class="list-group-item">Order History</li>
                        <li class="list-group-item">Payment Methods</li>
                        <li class="list-group-item">Account Settings</li>
                    </ul>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Dashboard</h5>
                    </div>
                    <div class="card-body">
                        <h6>Your Current Program</h6>
                        <div class="row align-items-center mb-4">
                            <div class="col-auto">
                                <div style="width: 80px; height: 80px; background-color: #f1f1f1; display: flex; align-items: center; justify-content: center; border-radius: 10px;">
                                    <img src="images/u-3.png" alt="Program" class="img-fluid" style="max-width: 50px;">
                                </div>
                            </div>
                            <div class="col">
                                <h6 class="mb-1">Advanced Strength Training</h6>
                                <p class="text-muted mb-1">With: Liogchii Vitalii</p>
                                <div class="progress" style="height: 10px;">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: 65%;" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <small>Week 4 of 6 - 65% Complete</small>
                            </div>
                        </div>

                        <h6>Upcoming Sessions</h6>
                        <div class="list-group mb-4">
                            <div class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Core Training</h6>
                                    <small>Feb 27, 2025</small>
                                </div>
                                <p class="mb-1">10:00 AM - 11:30 AM with Liogchii Vitalii</p>
                            </div>
                            <div class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Resistance Training</h6>
                                    <small>Feb 28, 2025</small>
                                </div>
                                <p class="mb-1">11:00 AM - 12:30 PM with Bagrin Constantin</p>
                            </div>
                        </div>

                        <h6>Your Stats</h6>
                        <div class="row text-center">
                            <div class="col-md-4">
                                <div class="p-3 mb-3" style="background-color: #f8f9fa; border-radius: 10px;">
                                    <h2 class="mb-1">12</h2>
                                    <p class="mb-0 text-muted">Total Sessions</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="p-3 mb-3" style="background-color: #f8f9fa; border-radius: 10px;">
                                    <h2 class="mb-1">85%</h2>
                                    <p class="mb-0 text-muted">Attendance</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="p-3 mb-3" style="background-color: #f8f9fa; border-radius: 10px;">
                                    <h2 class="mb-1">3</h2>
                                    <p class="mb-0 text-muted">Programs Completed</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Nutrition Plan</h5>
                    </div>
                    <div class="card-body">
                        <p>Your personalized nutrition plan for February 26, 2025</p>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card mb-3">
                                    <div class="card-header bg-light">Breakfast</div>
                                    <div class="card-body">
                                        <ul class="list-unstyled mb-0">
                                            <li>Protein Oatmeal - 350 cal</li>
                                            <li>Banana - 105 cal</li>
                                            <li>Greek Yogurt - 100 cal</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card mb-3">
                                    <div class="card-header bg-light">Lunch</div>
                                    <div class="card-body">
                                        <ul class="list-unstyled mb-0">
                                            <li>Grilled Chicken - 220 cal</li>
                                            <li>Brown Rice - 215 cal</li>
                                            <li>Steamed Vegetables - 85 cal</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card mb-3">
                                    <div class="card-header bg-light">Dinner</div>
                                    <div class="card-body">
                                        <ul class="list-unstyled mb-0">
                                            <li>Salmon Fillet - 280 cal</li>
                                            <li>Quinoa - 120 cal</li>
                                            <li>Mixed Salad - 70 cal</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card mb-3">
                                    <div class="card-header bg-light">Snacks</div>
                                    <div class="card-body">
                                        <ul class="list-unstyled mb-0">
                                            <li>Protein Shake - 160 cal</li>
                                            <li>Almonds (30g) - 180 cal</li>
                                            <li>Apple - 95 cal</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="text-center mt-3">
                            <a href="#" class="btn btn-primary">Download Full Diet Plan</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
