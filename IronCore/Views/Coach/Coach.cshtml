@model IronCore.Models.CoachViewModel

@{
    ViewBag.Title = "Coach";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero_area">
    <section class="slider_section position-relative">
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="container">
                        <div class="col-lg-10 col-md-11 mx-auto">
                            <div class="detail-box">
                                <h3>
                                    Meet Our
                                </h3>
                                <h2>
                                    Expert Trainer
                                </h2>
                                <h1>
                                    @Model.FullName
                                </h1>
                                <p>
                                    @Model.Qualification
                                </p>
                                <div class="">
                                    <a href="#trainer-profile">
                                        View Profile
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<section class="trainer_profile_section layout_padding" id="trainer-profile">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <div class="box">
                    <div class="img-box">
                        <img src="@Url.Content(Model.ImagePath ?? "~/Images/default-trainer.jpg")" alt="@Model.FullName" class="img-fluid rounded-circle">
                    </div>
                    <div class="detail-box">
                        <h5>@Model.FullName</h5>
                        <p>@Model.Qualification</p>
                        <div class="specialization">
                            <h6>Specialization:</h6>
                            <p>@Model.Specialization</p>
                        </div>
                        <div class="experience">
                            <h6>Experience:</h6>
                            <p>@Model.ExperienceTime+ Years</p>
                        </div>
                        <div class="social_box">
                            @if (!string.IsNullOrEmpty(Model.TelegramUrl))
                            {
                                <a href="@Model.TelegramUrl" target="_blank">
                                    <img src="@Url.Content("~/Images/telega.png")" alt="Telegram" />
                                </a>
                            }
                            @if (!string.IsNullOrEmpty(Model.SteamUrl))
                            {
                                <a href="@Model.SteamUrl" target="_blank">
                                    <img src="@Url.Content("~/Images/steam.png")" alt="Steam" />
                                </a>
                            }
                            @if (!string.IsNullOrEmpty(Model.InstagramUrl))
                            {
                                <a href="@Model.InstagramUrl" target="_blank">
                                    <img src="@Url.Content("~/Images/instagram.png")" alt="Instagram" />
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-md-6">
                <div class="bio-box">
                    <h4>Bio</h4>
                    <p>@Model.Bio</p>

                    @if (!string.IsNullOrWhiteSpace(Model.Testimonials))
                    {
                        <div class="testimonials">
                            <h4>Testimonials</h4>
                            <div class="testimonial-box">
                                <p>@Model.Testimonials</p>
                                <h6>- Client</h6>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
