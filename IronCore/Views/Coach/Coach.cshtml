@model IronCore.Models.CoachViewModel

@{
    ViewBag.Title = "Coach";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero_area">
    <section class="slider_section position-relative">
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="container">
                        <div class="col-lg-10 col-md-11 mx-auto">
                            <div class="detail-box">
                                <h3>
                                    Meet Our
                                </h3>
                                <h2>
                                    @Model.Qualification
                                </h2>
                                <h1>
                                    @Model.FullName
                                </h1>
                                <div class="">
                                    <a href="#trainer-profile">
                                        View Profile
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<section class="py-5 bg-white" id="trainer-profile">
    <div class="container">
        <div class="row g-5 align-items-start">
            <!-- Левая колонка: профиль тренера -->
            <div class="col-lg-4 col-md-6">
                <div class="card border-0 shadow rounded-4 text-center p-4">
                    <img src="@Url.Content(Model.ImagePath ?? "~/Images/default-trainer.jpg")"
                         alt="@Model.FullName"
                         class="img-fluid rounded-circle mb-4" style="width: 180px; height: 220px; object-fit: cover; margin: 0 auto;">

                    <h5 class="fw-semibold">@Model.FullName</h5>
                    <p class="text-muted mb-2">@Model.Qualification</p>

                    <div class="mt-3">
                        <h6 class="text-primary">Specialization</h6>
                        <p>@Model.Specialization</p>
                    </div>

                    <div class="mt-2">
                        <h6 class="text-primary">Experience</h6>
                        <p>@Model.ExperienceTime+ years</p>
                    </div>

                    <!-- Социальные иконки -->
                    <div class="d-flex justify-content-center gap-3 mt-4">
                        @if (!string.IsNullOrEmpty(Model.TelegramUrl))
                        {
                            <a href="@Model.TelegramUrl" target="_blank">
                                <img src="@Url.Content("~/Images/telega.png")" alt="Telegram" width="32" height="32" />
                            </a>
                        }
                        @if (!string.IsNullOrEmpty(Model.SteamUrl))
                        {
                            <a href="@Model.SteamUrl" target="_blank">
                                <img src="@Url.Content("~/Images/steam.png")" alt="Steam" width="32" height="32" />
                            </a>
                        }
                        @if (!string.IsNullOrEmpty(Model.InstagramUrl))
                        {
                            <a href="@Model.InstagramUrl" target="_blank">
                                <img src="@Url.Content("~/Images/instagram.png")" alt="Instagram" width="32" height="32" />
                            </a>
                        }
                    </div>
                </div>
            </div>

            <!-- Правая колонка: биография и отзывы -->
            <div class="col-lg-8 col-md-6">
                <div class="card border-0 shadow-sm p-4 rounded-4 bg-light">
                    <h4 class="mb-3 text-dark">Biography</h4>
                    <p class="text-muted">@Model.Bio</p>

                    @if (!string.IsNullOrWhiteSpace(Model.Testimonials))
                    {
                        <hr />
                        <div class="mt-4">
                            <h4 class="text-dark">Testimonials</h4>
                            <div class="bg-white p-3 rounded shadow-sm">
                                <p class="fst-italic">"@Model.Testimonials"</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

