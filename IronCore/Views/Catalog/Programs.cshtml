@model List<IronCore.Models.ProgramViewModel>

@{
    ViewBag.Title = "Programs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero_area">
    <!-- slider section -->
    <section class="slider_section position-relative">
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="container">
                        <div class="col-lg-10 col-md-11 mx-auto">
                            <div class="detail-box">
                                <div>
                                    <h3>Premium</h3>
                                    <h2>Fitness</h2>
                                    <h1>Programs</h1>
                                    <p>
                                        Find the perfect training program tailored to your fitness goals and experience level.
                                    </p>
                                    <div>
                                        <a href="#programs">View Programs</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<section class="us_section layout_padding" id="programs">
    <div class="container">
        <div class="heading_container">
            <h2>Our Training Programs</h2>
        </div>

        <div class="us_container">
            <div class="row">
                @foreach (var program in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="box">
                            <div class="detail-box">
                                <h5>@program.Title.ToUpper()</h5>
                                <p>@(program.Description.Length > 140 ? program.Description.Substring(0, 140) + "..." : program.Description)</p>
                                <div class="btn-box mt-3">
                                    <a href="@Url.Action("ProgramDetail", "Catalog", new { id = program.Id })">
                                        VIEW DETAILS
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
