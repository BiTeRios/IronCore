@model IEnumerable<IronCore.Models.ProductViewModel>
@{
    ViewBag.Title = "Nutritions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="us_section layout_padding" id="catalog">
    <div class="container">
        <div class="heading_container">
            <h2>Our Products</h2>
        </div>
        <div class="us_container">
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="box">
                            <div class="img-box">
                                <img src="@Url.Content(product.ImageUrl ?? "~/Images/no-image.png")" alt="@product.Title" style="max-width:100px; max-height:100px;">
                            </div>
                            <div class="detail-box">
                                <h5>@product.Title</h5>
                                <p>@product.Description</p>
                                <div class="btn-box mt-3">
                                    <a href="@Url.Action("NutritionsDetail", "Catalog", new { id = product.Id })">
                                        VIEW DETAILS
                                    </a>
                                </div>
                                <div class="price mt-2">
                                    <span>@product.Price.ToString("C")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            @if (!Model.Any())
            {
                <div class="alert alert-info mt-4">No products found.</div>
            }
        </div>
    </div>
</section>
