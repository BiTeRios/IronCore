@model IronCore.Models.ProgramViewModel

@{
    ViewBag.Title = "Program Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="layout_padding">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold text-primary">@Model.Title</h2>
            <p class="text-muted">Comprehensive program details</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        <h4 class="mb-3">Overview</h4>
                        <p class="text-dark">@Model.Description</p>

                        <ul class="list-group list-group-flush mb-4">
                            <li class="list-group-item"><strong>Suitable for:</strong> @Model.SuitableFor</li>
                            <li class="list-group-item"><strong>Duration:</strong> @Model.Duration</li>
                            <li class="list-group-item"><strong>Trainer:</strong> @Model.Trainer</li>
                        </ul>

                        <div class="text-end">
                            <a href="@Url.Action("Programs", "Catalog")" class="btn btn-outline-primary">← Back to the list of programs</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
