@model IronCore.Models.ProductViewModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-5 bg-light">
    <div class="container">
        <div class="row align-items-center g-5">
            <!-- Изображение -->
            <div class="col-md-6">
                <div class="card shadow-sm border-0">
                    <img src="@Url.Content(Model.ImageUrl ?? "~/Images/no-image.png")"
                         class="card-img-top img-fluid rounded"
                         alt="@Model.Title" />
                </div>
            </div>

            <!-- Информация о продукте -->
            <div class="col-md-6">
                <div class="card border-0 bg-white shadow-sm p-4 rounded">
                    <h1 class="display-6 fw-semibold">@Model.Title</h1>
                    <p class="text-muted mt-3">@Model.Description</p>
                    <h3 class="text-success fw-bold mt-4">@Model.Price.ToString("C")</h3>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="@Url.Action("AddToCart", "Account", new { id = Model.Id })" class="btn btn-primary btn-lg mt-4">
                            <i class="bi bi-cart-plus me-2"></i> Add to cart
                        </a>
                    }
                    else
                    {
                <p class="mt-4 text-danger">Please sign in to add to cart.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
