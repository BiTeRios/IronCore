@model IronCore.Models.ProductViewModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="product-detail layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="@Url.Content(Model.ImageUrl ?? "~/Images/no-image.png")" class="img-fluid" alt="@Model.Title" />
            </div>
            <div class="col-md-6">
                <h2>@Model.Title</h2>
                <p class="text-muted">@Model.Description</p>
                <h4 class="text-success mt-3">@Model.Price.ToString("C")</h4>
                <a href="@Url.Action("AddToCart", "Account", new { id = Model.Id })" class="btn btn-primary mt-3">Добавить в корзину</a>
            </div>
        </div>
    </div>
</section>

