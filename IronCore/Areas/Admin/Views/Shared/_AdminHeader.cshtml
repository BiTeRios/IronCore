@using System.Web.Mvc
@{
    /* активный пункт – тот, чей контроллер совпал с текущим */
    string current = (ViewContext.RouteData.Values["controller"] ?? "").ToString();
}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container-fluid">

        <a class="navbar-brand fw-bold" href="@Url.Action("Index","Users", new { area="Admin" })">
            Admin&nbsp;Panel
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#adminNav" aria-controls="adminNav"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="adminNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    @Html.ActionLink(
                        "Пользователи", "Index", "Users",
                        routeValues: new { area = "Admin" },
                        htmlAttributes: new { @class = "nav-link" + (current == "Users" ? " active" : "") })
                </li>
                <li class="nav-item">
                    @Html.ActionLink(
                        "Тренеры", "Index", "Trainers",
                        new { area = "Admin" },
                        new { @class = "nav-link" + (current == "Trainers" ? " active" : "") })
                </li>
                <li class="nav-item">
                    @Html.ActionLink(
                        "Бады", "Index", "Bads",
                        new { area = "Admin" },
                        new { @class = "nav-link" + (current == "Supplements" ? " active" : "") })
                </li>
                <li class="nav-item">
                    @Html.ActionLink(
                        "Трен. программы", "Index", "Programs",
                        new { area = "Admin" },
                        new { @class = "nav-link" + (current == "Programs" ? " active" : "") })
                </li>
            </ul>
            <span class="navbar-text text-white-50 me-3">
                @User.Identity.Name
            </span>
            <li class="nav-item">
            @Html.ActionLink(
                "Выйти",
                "Logout",
                "Account",
                new { area = "" },
                htmlAttributes: new { @class = "btn btn-outline-light btn-sm" })
            </li>
        </div>
    </div>
</nav>
